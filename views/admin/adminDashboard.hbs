<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>

 
  
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Cancelled', 'Delivered', 'Pending'],
      datasets: [{
        label: 'Overall',
        data: [{{statusArray}}],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

 const weeklyChart = document.getElementById('orderStatus');

  new Chart(weeklyChart, {
    type: 'polarArea',
    data: {
      labels: ['COD','PAYPAL','RAZORPAY',],
      datasets: [{
        label:'Weekly',
        data: [{{orderStatus}}],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  }); 


</script>





